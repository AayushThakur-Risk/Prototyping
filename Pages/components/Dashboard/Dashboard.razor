@page "/Dashboard"
@* Link the external CSS file here *@
<link href="Pages/components/Dashboard/Dashboard.css" rel="stylesheet" />
<PageTitle>Dashboard</PageTitle>



<div class="container">
    <div class="dashboard-container d-flex">
        <div class="left">
            <div class="page-heading-l1">Website Monitoring Dashboard</div>
            <div class="page-heading-l2">Monitor and analyze website performance across states</div>
        </div>
        <div class="right">
            <div class="duration-selection">
                <select class="form-select" style="width: auto;">
                    <option value="24h">Last 24 Hours</option>
                    <option value="1w">Last 1 Week</option>
                    <option value="2w">Last 2 Weeks</option>
                    <option value="3m">Last 3 Months</option>
                </select>
            </div>
            <div class="export-icon">
                <i class="bi bi-box-arrow-down"></i> Export
            </div>
        </div>
    </div>
    <!-- Summary Div Section -->
    <div class="row mb-4 text-center">
        <!-- Total URLs with Changes div -->
        <div class="col-md-3 mb-3">
            <div class="cards all-count" @onclick="() => FilterByUrlsWithChanges()">
                <div class="small">Total Websites</div>
                <div class="card-counter ">@cards?.total</div>
                <div class="small">Total URLs with Changes</div>
            </div>
        </div>

        <!-- Online -->
        <div class="col-md-3 mb-3">
            <div class="cards online" @onclick="() => FilterByHealthyUrls()">
                <div class="small">Online</div>
                <div class="card-counter">@cards?.online</div>
                <div class="small">Healthy URLs</div>
            </div>
        </div>

        <!-- Broken URLs div -->
        <div class="col-md-3 mb-3 error">
            <div class="cards" @onclick="() => FilterByBrokenUrls()">
                <div class="small">Errors</div>
                <div class="card-counter">@cards?.errors</div>
                <div class="small">Broken URLs</div>
            </div>
        </div>

        <!-- Significant Change div -->
        <div class="col-md-3 mb-3">
            <div class="cards offline" @onclick="() => FilterBySignificantChanges()">
                <div class="small">Offline</div>
                <div class="card-counter">@cards?.offline</div>
                <div class="small">Significant Changes</div>
            </div>
        </div>
    </div>

    <div class="dashboard-container d-flex">
        <div class="left">
            @* <div class="d-flex justify-content-start mb-3">
                <button class="btn btn-outline-primary me-2" >
                    <i class="bi bi-map"></i> Map View
                </button>
                <button class="btn btn-outline-primary" >
                    <i class="bi bi-table"></i> Table View
                </button>
            </div> *@
            <div class="d-flex justify-content-start mb-3 toggle">
                <!-- Light Grey Div (Map View) -->
                <div class="view-toggle" style="background-color:"#d3d3d3"">
                    <i class="bi bi-map"></i> Map View
                </div>

                <!-- Dark Grey Div (Table View) -->
                <div class="view-toggle ms-2" style="background-color:"#f8f9fa"">
                    <i class="bi bi-table"></i> Table View
                </div>
            </div>
        </div>
        <div class="right">
            
        </div>
    </div>


    <!-- Data Grid Table -->
    <table class="table table-striped table-bordered mt-3 rounded-3 shadow-sm">
        <thead>
            <tr>
                <th @onclick="() => SortBy(SortColumn.Url)" style="cursor: pointer;">URL</th>
                <th @onclick="() => SortBy(SortColumn.IsHealthy)" style="cursor: pointer;">Health Status</th>
                <th @onclick="() => SortBy(SortColumn.PercentageChange)" style="cursor: pointer;">Percentage Change</th>
                <th @onclick="() => SortBy(SortColumn.SignificanceChange)" style="cursor: pointer;">Significance Change</th>
                <th @onclick="() => SortBy(SortColumn.LastScraped)" style="cursor: pointer;">Last Scraped</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in pagedData)
            {
                <tr>
                    <td>@item.Url</td>
                    <td>@(item.IsHealthy ? "Healthy" : "Unhealthy")</td>
                    <td>@item.PercentageChange%</td>
                    <td>@item.SignificanceChange%</td>
                    <td>@item.LastScraped.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Section -->
    <div class="pagination d-flex justify-content-center align-items-center mt-4">
        <button class="btn btn-primary rounded-3" @onclick="PreviousPage" disabled="@(currentPage == 1)">Previous</button>
        <span class="mx-3">Page @currentPage of @totalPages</span>
        <button class="btn btn-primary rounded-3" @onclick="NextPage" disabled="@(currentPage == totalPages)">Next</button>
    </div>
</div>