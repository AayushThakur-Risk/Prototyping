@page "/Dashboard"
@* Link the external CSS file here *@
<link href="Pages/components/Dashboard/Dashboard.css" rel="stylesheet" />
<PageTitle>Dashboard</PageTitle>

<div class="container">
    <div class="dashboard-container d-flex">
        <div class="left">
            <div class="page-heading-l1">Website Monitoring Dashboard</div>
            <div class="page-heading-l2">Monitor and analyze website performance across states</div>
        </div>
        <div class="right">
            <div class="form-group mr-5">
                <select id="domainSelect" class="form-select" @onchange="OnDomainChanged">
                    <option value="traffic">Traffic</option>
                    <option value="student">Student</option>
                </select>
            </div>
            <div class="duration-selection">
                <select class="form-select" style="width: auto;">
                    <option value="24h">Last 24 Hours</option>
                    <option value="1w">Last 1 Week</option>
                    <option value="2w">Last 2 Weeks</option>
                    <option value="3m">Last 3 Months</option>
                </select>
            </div>
            <div class="export-icon">
                <i class="bi bi-box-arrow-down"></i> Export
            </div>
        </div>
    </div>
    <!-- Summary Div Section -->
    <div class="row mb-4 text-center">
        @foreach (var card in dashboardData?.cards)
        {
            <div class="col-md-3 mb-3">
                <div class="@card?.cssClass" @onclick="() => FilterByUrlsWithChanges()">
                    <div class="small">@card?.heading</div>
                    <div class="card-counter ">@card?.count</div>
                    <div class="small">@card?.description</div>
                </div>
            </div>
        }
    </div>

    <div class="filter-view d-flex">
        <div class="d-flex justify-content-start mb-3 toggle">
            <!-- Map View Toggle -->
            <div class="view-toggle" 
                style="background-color: @(IsMapView ? "#ffffff" : "#cbcbcb59")"
                @onclick="() => SetView(true)">
                <i class="bi bi-map"></i> Map View
            </div>

            <!-- Table View Toggle -->
            <div class="view-toggle ms-2" 
                style="background-color: @(!IsMapView ? "#ffffff" : "#cbcbcb59")"
                @onclick="() => SetView(false)">
                <i class="bi bi-table"></i> Table View
            </div>
        </div>
        <div class="right">
            <div class="search-box">
                <!-- Search Icon -->
                <i class="icon bi bi-search"></i>
                @*  @bind:event="oninput" *@
                <!-- Search Input -->
                <input @bind="SearchText" @oninput="OnSearchInput" 
                    type="text" placeholder="Search..." />
            </div>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-list"></i>
                </span>
                <select class="form-select" @onchange="HandleChange">
                    @foreach (var option in StateOptions)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
            </div>
        </div>
    </div>


    <div>
        @if (IsMapView)
        {
            @* <p>Map View Content</p> *@
            <!-- Replace with your map view implementation -->
        }
        else
        {

            @if (FilteredData == null || !FilteredData.Any())
            {
                <tr>
                    <td colspan="@((dashboardData?.columnLabels?.Count() ?? 0) + 2)">No matching records found.</td>
                </tr>
            }
            else
            {
                <table class="table table-bordered mt-3 rounded-3 shadow-sm">
                    <thead>
                        <tr>
                            <th style="cursor: pointer;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck">
                                </div>
                            </th>
                            @foreach (var column in columnLabels)
                            {
                                <th @onclick="() => SortBy(column.key)" style="cursor: pointer;">
                                    @column.title
                                    @if (currentSortKey == column.key)
                                    {
                                        <i class="bi @(isAscending ? "bi-sort-up" : "bi-sort-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-sort-down"></i>
                                    }
                                </th>
                            }
                            <th style="cursor: pointer;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in GetFilteredAndPaginatedData())
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="defaultCheck">
                                    </div>
                                </td>
                                @foreach (var column in columnLabels)
                                {
                                    <td>
                                        <div class="@GetPropertyValue(data, column.key)-label">@GetPropertyValue(data, column.key)</div>
                                    </td>
                                }
                                <td>
                                    <div class="refreshURL">
                                        <i class="bi bi-arrow-clockwise"></i>
                                        Check Now
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination Controls -->
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(tablePagination.currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="GoToPreviousPage">Previous</button>
                        </li>
                        @* @for (int j = 1; j <= TotalPages; j++)
                        {
                            <li class="page-item @(j == tablePagination.currentPage ? "active" : "")">
                                <button class="page-link" @onclick="(() => GoToPage(j))">@j</button>
                            </li>
                        } *@
                        <li class="page-item @(tablePagination.currentPage == TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="GoToNextPage">Next</button>
                        </li>
                    </ul>
                </nav>
            }

            <!-- Pagination Section -->
            @* <div class="pagination d-flex justify-content-center align-items-center mt-4">
                <button class="btn btn-primary rounded-3" @onclick="PreviousPage" disabled="@(currentPage == 1)">Previous</button>
                <span class="mx-3">Page @currentPage of @totalPages</span>
                <button class="btn btn-primary rounded-3" @onclick="NextPage" disabled="@(currentPage == totalPages)">Next</button>
            </div> *@
        }
    </div>


   
</div>